FROM ubuntu:20.04
ARG DEBIAN_FRONTEND=noninteractive

# Install dependencies for PMDK
RUN apt-get update && apt-get -qq install -y \
    pkg-config \
    libndctl-dev \
    libdaxctl-dev \
    pandoc \
    m4 \
    git \
    build-essential \
    python \
    autotools-dev \
    automake \
    libc6-dbg

# Install PMDK
WORKDIR /
RUN git clone https://github.com/pmem/pmdk.git /pmdk
WORKDIR /pmdk
RUN git checkout 1.9.2
RUN make -j7
RUN make -j7 install
RUN ldconfig

WORKDIR /
RUN git clone https://github.com/pmem/valgrind.git
WORKDIR /valgrind
RUN ./autogen.sh
RUN ./configure
RUN make -j7
RUN make -j7 install

COPY . /ripe64
WORKDIR /ripe64
RUN mkdir build
RUN git apply memcheck.patch
RUN make build/gcc_attack_gen

RUN useradd kartal
RUN mkdir vgcore_blackhole
RUN chmod 550 vgcore_blackhole # Disable writes to keep valgrind from producing large core dumps
RUN chown kartal:kartal vgcore_blackhole
