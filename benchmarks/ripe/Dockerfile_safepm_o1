FROM spp-llvm-clang-test:latest

# Install dependencies for PMDK
RUN apt-get update && apt-get -qq install -y \
   pkg-config \
   libndctl-dev \
   libdaxctl-dev \
   pandoc \
   m4 \
   git \
   build-essential \
   python \
   sudo 

# Install PMDK
WORKDIR /
RUN git clone https://github.com/TUM-DSE/safepm-pmdk.git /pmdk
WORKDIR /pmdk
RUN git checkout pmasan-1.9.2
RUN make -j7 install
RUN ldconfig

WORKDIR /spp-pass/benchmarks/ripe
RUN mkdir -p build
COPY ./Makefile_container_O1 /spp-pass/benchmarks/ripe/
RUN mv Makefile_container_O1 Makefile
RUN make clean 
RUN make build/gcc_attack_gen_pmemobj_heap INTACT=1 ASAN=1
RUN cd build && mv gcc_attack_gen_pmemobj_heap gcc_attack_gen
